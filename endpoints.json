{
  "GET /api": {
    "description": "serves up a json representation of all the available endpoints of the api"
  },
  "GET /api/topics": {
    "description": "serves an array of all topics",
    "queries": [],
    "exampleResponse": {
      "topics": [{ "slug": "football", "description": "Footie!" }]
    }
  },
  "GET /api/articles": {
    "description": "serves an array of all articles",
    "exampleResponse": {
      "articles": [
        {
          "title": "Seafood substitutions are increasing",
          "topic": "cooking",
          "author": "weegembump",
          "created_at": "2018-05-30T15:59:13.341Z",
          "votes": 0,
          "comment_count": 6
        }
      ]
    }
  },
  "GET /api/articles/:article_id": {
    "description": "serves an object by article_id",
    "exampleResponse": {
      "article": {
        "article_id": 1,
        "title": "Seafood substitutions are increasing",
        "topic": "cooking",
        "author": "weegembump",
        "body": "Text content here...",
        "created_at": "2018-05-30T15:59:13.341Z",
        "votes": 0,
        "article_img_url": "https://images.com/seafood.jpg"
      }
    }
  },
  "GET /api/articles/:article_id/comments": {
    "description": "Provides an array of all the comments for a specific article(article_id)",
    "exampleResponse": {
      "comments": [
          {
            "comment_id": 5,
            "article_id": 1,
            "body": "I hate streaming noses",
            "votes": 0,
            "author": "icellusedkars",
            "created_at": "2020-11-03T21:00:00.000Z"
        }
      ]
    }
},
 "POST /api/articles/:article_id/comments": {
    "description": "adds a comment for an article with a specified id",
    "exampleRequest": {
      "username": "icellusedkars",
      "body":"This gif is awesome"
    },    
    "exampleResponse": {
      "newComment": [
        {
          "comment_id": 19,
          "article_id": 3,
          "body": "This gif is awesome",
          "votes": 0,
          "author": "icellusedkars",
          "created_at": "2025-05-10T12:18:41.201Z"
      }
      ]
    }
  }
}